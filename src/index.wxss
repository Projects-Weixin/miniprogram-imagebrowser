/* pages/components/photobrowser/photobrowser.wxss */

.photo-browser-page {
  background-color: black;
  width: 100%;
  height: 100%;
  z-index: 30;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.swiperView {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image {
  width: 100%;
}

.toolbar {
  z-index: 31;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  margin-left: 16px;
  margin-right: 16px;
  margin-bottom: 16px;
}

.btnView {
  background-color: rgba(255, 255, 255, 0.3);
  width: 64px;
  height: 32px;
  border-radius: 16px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: white;
  line-height: 14px;
}

.btnleft {
  margin-left: 0;
}

.btnright {
  margin-right: 0;
}

.btn {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: white;
  line-height: 14px;
}

.unselectedBtn {
  background-color: rgba(255, 255, 255, 0.3);
}

.selectedViewBtn {
  background-color: #ffb432;
}

.action-sheet-page {
  background-color: blue;
  width: 100%;
  height: 100%;
  z-index: 50;
  position: fixed;
}

.actionSheetView {
  width: 100%;
  height: 50%;
  background-color: black;
  position: fixed;
  bottom: 0;
}

.actionSheetItemView {
  display: flex;
  width: 100%;
  height: 40px;
  /* opacity:0.5; */
  justify-content: center;
  align-items: center;
}

.actionSheetItem {
  color: #fff;
  font-size: 14px;
  margin-right: 7px;
}

.currentPoint {
  width: 8px;
  height: 8px;
  background: rgba(211, 165, 115, 1);
  border-radius: 4px;
}

.preview {
  background-color: black;
  width: 100%;
  height: 100%;
  z-index: 100;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
